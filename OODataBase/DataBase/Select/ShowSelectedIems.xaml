<Window x:Class="DataBase.Select.ShowSelectedIems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase.Select"
        mc:Ignorable="d"
        Title="ShowSelectedIems" Height="550" Width="400">
    <Grid Background="AliceBlue">
        <Label FontSize="20" Background="AliceBlue" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top" Name="title" FontWeight="ExtraBold"></Label>
        <TextBox FontSize="20" HorizontalContentAlignment="Center" Background="AliceBlue" VerticalContentAlignment="Center" TextAlignment="Center" Name="item" Margin="0, 50" IsReadOnly="True" BorderThickness="0"></TextBox>
        <Button VerticalAlignment="Bottom" Margin="0, 10" Width="120" Height="30" FontSize="16" Click="Button_Click">Close</Button>
    </Grid>
</Window>
