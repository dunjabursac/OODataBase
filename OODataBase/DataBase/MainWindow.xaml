<Window x:Class="DataBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="400">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="1" Width="200" Height="50" FontSize="16" Click="Button_Click">Add Item</Button>
        <ComboBox Grid.Row="0" HorizontalAlignment="Center" Name="comboBox_Items" VerticalAlignment="Center" ItemsSource="{Binding Items}" Width="120"/>
        <Button Grid.Row="1" Content="Select items" FontSize="16" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="200" Click="Button_Click_1"/>

    </Grid>
</Window>
